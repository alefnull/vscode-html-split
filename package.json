{
  "name": "html-split",
	"publisher": "alefnull",
	"displayName": "HTML Split",
	"description": "Splits the CSS and JS out of an HTML file into their own files, and adds references to the HTML file.",
	"version": "1.0.1",
	"icon": "hs-icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/alefnull/vscode-html-split.git"
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"tags": [
		"split",
		"html",
		"css",
		"javascript"
	],
	"activationEvents": [
        "onCommand:html-split.splitFile"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
            "command": "html-split.splitFile",
            "title": "Run HTML Split"

		}]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "eslint": "^7.32.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.1",
        "typescript": "^4.4.3",
        "@vscode/test-electron": "^1.6.2"
    }

}
